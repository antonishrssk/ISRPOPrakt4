<Window x:Class="Prakt4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prakt4"
        mc:Ignorable="d"
        Title="Фракталы" SizeToContent="Height" Width="200" ResizeMode="NoResize">
    <StackPanel Margin="5">
        <Button Content="Фрактальное дерево" Margin="5"
                Click="btnFractalTree_Click"/>
        <Button Content="Кривая Коха" Margin="5"
                Click="btnKochCurve_Click"/>
        <Button Content="Ковер Серпинского" Margin="5"
                Click="btnSierpinskiCarpet_Click"/>
        <Button Content="Треугольник Серпинского" Margin="5"
                Click="btnSierpinskiTriangle_Click"/>
        <Button Content="Множество Кантора" Margin="5"
                Click="btnCantorSet_Click"/>
    </StackPanel>
</Window>
